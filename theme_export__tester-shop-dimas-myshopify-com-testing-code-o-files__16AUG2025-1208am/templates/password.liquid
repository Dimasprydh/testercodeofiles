    <!-- Centered Login Form -->
    <main class="main-login flex-grow flex items-center justify-center">
      <form method="post" action="/password" class="w-full max-w-sm bg-[#333] p-6">
        {{ form.errors | default_errors }}

        <label for="password" class="block text-[10px] font-bold text-white text-center mb-3 uppercase tracking-wide">
          Password
        </label>

        <div class="flex border border-white">
          <input
            id="password"
            name="password"
            type="password"
            placeholder="Enter password"
            class="flex-grow text-[10px] px-3 py-2 outline-none text-white bg-[#333] placeholder-white"
            autocomplete="current-password"
          />
          <button
            type="submit"
            class="text-[9px] font-bold px-4 py-2 bg-white text-[#333] uppercase"
            name="commit"
          >
            Login
          </button>
        </div>
      </form>
    </main>

   

<style>
/* Reset dan layout dasar */
html, body {
  height: 100%;
  margin: 0;
  padding: 0;
}

body {
  display: flex;
  flex-direction: column;
  min-height: 100vh; /* full viewport height */
}

main {
  flex-grow: 1; /* konten utama akan dorong footer ke bawah */
}

.logo-img {
  max-height: 30px; /* Atur sesuai kebutuhan, misalnya 40px, 32px, dsb */
}




/* Footer styling */
.footer {
  display: flex;
  justify-content: space-between; /* kiri - tengah - kanan */
  align-items: center;
  padding: 20px 40px;
  background-color: #333;
  color: #cccccc;
  font-family: Arial, sans-serif;
  font-size: 12px;
  flex-wrap: nowrap; /* satu baris */
  position: relative;
  z-index: 10;
  white-space: nowrap;
  flex-shrink: 0; /* jangan mengecil */
}

/* Footer kiri dan kanan jadi flex row */


/* Alignment kiri, tengah, kanan */


.footer-center {
  justify-content: center;
  text-align: center;
  flex: 1;
  margin-right: 1rem;
}



/* Link style */
.footer p {
  color: white;
  text-decoration: none;
  transition: color 0.3s;
}

.bysite{
   padding-top: 10px;
}


/* Responsif di bawah 600px */
@media screen and (max-width: 600px) {
  .footer {
    flex-direction: column;
    gap: 15px;
    padding: 15px 20px;
    white-space: normal; /* supaya bisa wrap di mobile */
  }
  .footer-left, .footer-center, .footer-right {
    flex-direction: column;
    gap: 6px;
    justify-content: center;
    text-align: center;
  }

      input[type="password"] {
      font-size: 16px; /* Ukuran font minimal untuk mencegah zoom */
    }
}

