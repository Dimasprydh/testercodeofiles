<div class="wrapper">
  <div class="container">
    <!-- Informasi Kontak -->
    <div class="contact-info">
      <p><strong>Contact Information</strong></p>
      <p><a href="mailto:{{ shop.email }}">{{ shop.email }}</a></p>
    </div>

    <!-- Formulir Kontak -->
    <div class="form-container">
      {% form 'contact' %}
        
        {% if form.posted_successfully? %}
          <p class="success-message">Your message has been sent!</p>
        {% elsif form.errors %}
          <p class="error-message">There was an error sending your message. Please try again.</p>
        {% endif %}
        
        {{ form.errors | default_errors }}

        <input type="text" name="contact[first_name]" placeholder="First Name" required />
        <input type="text" name="contact[last_name]" placeholder="Last Name" required />
        
        <select name="contact[category]" required>
          <option value="" disabled selected>Select Request Category</option>
          <option value="Order Issue">Order Issue</option>
          <option value="Feedback">Feedback</option>
          <option value="Other">Other</option>
        </select>

        <input type="text" name="contact[order_number]" placeholder="Order #" />
        <input type="email" name="contact[email]" placeholder="Email" required />
        <textarea name="contact[body]" placeholder="Message" required></textarea>

        <button type="submit">SUBMIT</button>
      {% endform %}
    </div>
  </div>
</div>

<style>

    body {
    font-family: 'Roboto Mono', monospace;
    background-color: white;
    font-size: 14px;
  }
/* Layout dasar */
.wrapper {
  display: flex;
  justify-content: center;
  padding: 3rem 1rem;
  background-color: white;
  min-height: 40vh;
}

.container {
  max-width: 800px;
  width: 100%;
  background: #fff;
  padding: 2rem;
}

/* Informasi kontak */
.contact-info {
  text-align: center;
  margin-bottom: 2rem;
}

.contact-info strong {
  font-size: 1rem;
  display: block;
  margin-bottom: 0.5rem;
  color: #222;
  
}

.contact-info a {
  color: #333;
  text-decoration: none;
  font-weight: 500;
  text-decoration: underline;
}

.contact-info a:hover {
  text-decoration: underline;
}

/* Formulir kontak */
.form-container form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.form-container input,
.form-container select,
.form-container textarea {
  padding: 0.75rem 1rem;
  border-right: 3px solid #6b6b6b;
    border-left: 1px solid #6b6b6b;
    border-top: 1px solid #6b6b6b;
    border-bottom: 1px solid #6b6b6b;
  border-radius: 0px;
  font-size: 1rem;
  width: 100%;
  transition: border-color 0.3s;
}

.form-container input:focus,
.form-container select:focus,
.form-container textarea:focus {
  border-color: #0077cc;
  outline: none;
}

/* Tombol */
.form-container button {
  padding: 0.75rem 1.5rem;
  background-color: #000;
  color: #fff;
  border: none;
  border-radius: 0px;
  font-weight: bold;
  cursor: pointer;
  font-size: 1rem;
  transition: background-color 0.3s;
}

.form-container button:hover {
  background-color: #333;
}

/* Pesan sukses dan error */
.success-message {
  color: #0a8f2b;
  background-color: #e6ffe9;
  border: 1px solid #0a8f2b;
  padding: 0.75rem 1rem;
  border-radius: 8px;
  margin-bottom: 1rem;
}

.error-message {
  color: #cc0000;
  background-color: #ffe5e5;
  border: 1px solid #cc0000;
  padding: 0.75rem 1rem;
  border-radius: 8px;
  margin-bottom: 1rem;
}

/* Error default liquid (form.errors | default_errors) */
ul.errors {
  list-style: none;
  padding: 0;
  margin: 0 0 1rem;
  color: #cc0000;
  font-size: 0.95rem;
}

ul.errors li {
  margin-bottom: 0.5rem;
}

/* Responsive */
@media (max-width: 600px) {
  .container {
    padding: 1.5rem;
  }

  .form-container input,
  .form-container select,
  .form-container textarea {
    font-size: 0.95rem;
  }

  .form-container button {
    font-size: 0.95rem;
  }
}

</style>
