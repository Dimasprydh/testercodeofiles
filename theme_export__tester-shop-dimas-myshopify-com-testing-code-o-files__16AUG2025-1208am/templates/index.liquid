<script>
(function () {
  const viewAll   = document.querySelector('.split-hero__center');
  const header    = document.querySelector('.custom-header');
  const sentinel  = document.getElementById('footer-sentinel');

  if (!viewAll || !header || !sentinel) return;

  const HEADER_BUFFER = 6; 
  function isMobile() { return window.innerWidth <= 600; }

  let footerNear = false;
  const io = new IntersectionObserver(([entry]) => {
    footerNear = entry.isIntersecting;
    applyVisibility();
  }, {
    root: null,
    threshold: 0,
    rootMargin: '0px 0px -1px 0px'
  });
  io.observe(sentinel);

  function touchesHeader() {
    const headerBottom = header.getBoundingClientRect().bottom;
    const vaTop        = viewAll.getBoundingClientRect().top;
    return vaTop <= (headerBottom + HEADER_BUFFER);
  }

  function applyVisibility() {
    
    if (!isMobile()) {
      viewAll.classList.remove('hide');
      return;
    }

 
    const isAtPageTop = window.scrollY <= 10;
    
    if (footerNear || (touchesHeader() && !isAtPageTop)) {
      viewAll.classList.add('hide');
    } else {
      viewAll.classList.remove('hide');
    }
  }

  let ticking = false;
  function onScrollOrResize() {
    if (ticking) return;
    ticking = true;
    requestAnimationFrame(() => {
      ticking = false;
      applyVisibility();
    });
  }

  window.addEventListener('scroll', onScrollOrResize, { passive: true });
  window.addEventListener('resize', onScrollOrResize);
  
  applyVisibility();
})();
</script>




